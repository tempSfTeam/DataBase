<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.linjiajun.equipmentledger.mapper.WorkshopMapper">

    <resultMap id="BaseResultMap" type="com.linjiajun.equipmentledger.entity.Workshop">
            <id property="workshopId" column="workshop_id" jdbcType="VARCHAR"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="manager" column="manager" jdbcType="VARCHAR"/>
            <result property="location" column="location" jdbcType="VARCHAR"/>
            <result property="description" column="description" jdbcType="VARCHAR"/>
            <result property="createdAt" column="created_at" jdbcType="TIMESTAMP"/>
            <result property="updatedAt" column="updated_at" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        workshop_id,name,manager,
        location,description,created_at,
        updated_at
    </sql>

    <!-- searchByFields: 分页 + 四字段模糊搜索 -->
    <select id="searchByFields" resultType="com.linjiajun.equipmentledger.entity.Workshop" parameterType="map">
        SELECT w.*
        FROM workshop w
        WHERE 1=1
        <if test="workshopId != null and workshopId.trim() != ''">
            AND LOWER(w.workshop_id) LIKE '%' || LOWER(#{workshopId}) || '%'
        </if>

        <if test="name != null and name.trim() != ''">
            AND LOWER(w.name) LIKE '%' || LOWER(#{name}) || '%'
        </if>

        <if test="manager != null and manager.trim() != ''">
            AND LOWER(w.manager) LIKE '%' || LOWER(#{manager}) || '%'
        </if>

        <if test="location != null and location.trim() != ''">
            AND LOWER(w.location) LIKE '%' || LOWER(#{location}) || '%'
        </if>

        ORDER BY w.updated_at DESC
    </select>
</mapper>
