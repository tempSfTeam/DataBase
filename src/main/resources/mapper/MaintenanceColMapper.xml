<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.linjiajun.equipmentledger.mapper.MaintenanceColMapper">

    <resultMap id="BaseResultMap" type="com.linjiajun.equipmentledger.entity.MaintenanceCol">
            <id property="maintenanceId" column="maintenance_id" jdbcType="BIGINT"/>
            <result property="maintenanceNo" column="maintenance_no" jdbcType="VARCHAR"/>
            <result property="deviceNo" column="device_no" jdbcType="VARCHAR"/>
            <result property="maintenanceTime" column="maintenance_time" jdbcType="TIMESTAMP"/>
            <result property="faultType" column="fault_type" jdbcType="VARCHAR"/>
            <result property="faultDesc" column="fault_desc" jdbcType="VARCHAR"/>
            <result property="repairAction" column="repair_action" jdbcType="VARCHAR"/>
            <result property="repairPerson" column="repair_person" jdbcType="VARCHAR"/>
            <result property="cost" column="cost" jdbcType="NUMERIC"/>
            <result property="durationMinutes" column="duration_minutes" jdbcType="INTEGER"/>
            <result property="createdAt" column="created_at" jdbcType="TIMESTAMP"/>
            <result property="updatedAt" column="updated_at" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        maintenance_id,maintenance_no,device_no,
        maintenance_time,fault_type,fault_desc,
        repair_action,repair_person,cost,
        duration_minutes,created_at,updated_at
    </sql>


    <!-- 插入并返回 id -->
    <select id="insertMaintenance" resultType="long" parameterType="map">
        SELECT sp_insert_maintenance(
                       #{maintenanceNo, jdbcType=VARCHAR},
                       #{deviceNo, jdbcType=VARCHAR},
                       #{maintenanceTime, jdbcType=TIMESTAMP},  -- 若函数接受 timestamptz, TIMESTAMP/TIMESTAMP_WITH_TIMEZONE
                       #{faultType, jdbcType=VARCHAR},
                       #{faultDesc, jdbcType=VARCHAR},
                       #{repairAction, jdbcType=VARCHAR},
                       #{repairPerson, jdbcType=VARCHAR},
                       #{cost, jdbcType=NUMERIC},
                       #{durationMinutes, jdbcType=INTEGER}
               )
    </select>

    <!-- 更新 -->
    <update id="updateMaintenance" parameterType="map">
        SELECT sp_update_maintenance(
                       #{maintenanceId, jdbcType=BIGINT},
                       #{maintenanceNo, jdbcType=VARCHAR},
                       #{deviceNo, jdbcType=VARCHAR},
                       #{maintenanceTime, jdbcType=TIMESTAMP},
                       #{faultType, jdbcType=VARCHAR},
                       #{faultDesc, jdbcType=VARCHAR},
                       #{repairAction, jdbcType=VARCHAR},
                       #{repairPerson, jdbcType=VARCHAR},
                       #{cost, jdbcType=NUMERIC},
                       #{durationMinutes, jdbcType=INTEGER}
               )
    </update>

    <!-- 删除 -->
    <update id="deleteMaintenance" parameterType="long">
        SELECT sp_delete_maintenance( #{maintenanceId, jdbcType=BIGINT} )
    </update>

</mapper>
